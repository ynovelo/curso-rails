<%name ||="Crear" %>
<h1><%= name %></h1>
<%= form_for(@article) do |f| %>
<% @article.errors.full_messages.each do |message| %>
	<div class="be-red white">
		* <%= message%>
		</div>
<%end%>
	<div class="field">
		<%= f.text_field :title, placeholder: "Título" %>

	</div>
	<div class="field">
		<%= f.text_area :body, placeholder: "Descripción del artículo" %>
		
	</div>
	<div>
		<%= f.submit "Guardar", class:"be-red white"%>
	</div>
<%end%>